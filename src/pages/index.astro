---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout 
  title="Home" 
  description="The eternal library of humanity’s wisdom — preserved at the edge of space and time"
>
  <main class="relative min-h-screen flex flex-col items-center justify-center px-6">
    <div class="text-center max-w-4xl mx-auto space-y-12">
      <!-- Title – big but not monstrous -->
      <h1 class="text-6xl md:text-8xl font-bold tracking-tight bg-gradient-to-r from-cyan-300 via-purple-300 to-pink-300 bg-clip-text text-transparent leading-tight">
        Enter the Vault
      </h1>

      <!-- Poetic mission statement -->
      <p class="text-xl md:text-2xl leading-relaxed opacity-90 max-w-2xl mx-auto">
        A silent observatory of human knowledge —  
        <span class="block mt-4 text-lg opacity-80">
          freely preserved across centuries, open to every mind in the universe.
        </span>
      </p>

      <!-- Search bar – elegant and functional -->
      <form action="/search" class="max-w-2xl mx-auto mt-12">
        <input
          type="search"
          name="q"
          placeholder="Search wisdom across the ages..."
          class="w-full px-8 py-5 text-lg bg-white/5 backdrop-blur-xl border border-white/20 rounded-2xl focus:outline-none focus:border-cyan-400/60 placeholder-gray-500 transition-shadow hover:shadow-cyan-500/20"
          required
        />
      </form>

      <p class="text-sm uppercase tracking-widest opacity-50 mt-20">
        Powered by the edge • Built to outlast the stars
      </p>
    </div>
  </main>
</MainLayout>
