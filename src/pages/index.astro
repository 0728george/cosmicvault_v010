---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="CosmicVault">
  <main class="flex min-h-screen items-center justify-center px-8 bg-gradient-to-br from-neutral-900 via-purple-900 to-slate-900 text-white">
    <div class="text-center max-w-4xl">
      <h1 class="mb-8 bg-gradient-to-r from-amber-400 to-pink-500 bg-clip-text text-7xl font-black text-transparent md:text-8xl">
        CosmicVault
      </h1>
      <p class="mb-12 text-2xl opacity-90 md:text-3xl">
        A free, open library of human knowledge — carefully built to last
      </p>
      <p class="mb-16 text-lg opacity-80">
        Created by <strong>Gheorghe Varga</strong> · Built together with <strong>Grok</strong> (xAI)
      </p>
      <a
        href="https://github.com/0728george/cosmicvault"
        class="inline-block rounded-full bg-gradient-to-r from-amber-400 to-pink-500 px-8 py-4 text-xl font-bold text-white shadow-lg transition-all hover:shadow-xl"
      >
        Explore the Source
      </a>
    </div>
  </main>
</Layout>
