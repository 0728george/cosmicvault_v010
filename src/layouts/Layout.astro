---
// src/layouts/Layout.astro
export interface Props {
  title: string;
}

const { title = "CosmicVault" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    
    <!-- This line was missing â€” this loads Tailwind + daisyUI -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: { extend: {} },
        plugins: [require('daisyui')],
        daisyui: { themes: ["dark"] }
      }
    </script>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-neutral-900 via-purple-900 to-slate-900 text-white">
    <slot />
  </body>
</html>
