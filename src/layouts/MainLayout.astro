---
// src/layouts/MainLayout.astro
import '../styles/global.css';
export interface Props { title: string; description?: string; }
const { title = "CosmicVault", description = "Eternal archive of human wisdom" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} • CosmicVault</title>
    <meta name="description" content={description} />

    <link rel="icon" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
  </head>

  <body class="font-sans bg-black text-gray-100 min-h-screen overflow-x-hidden">

    <!-- Galaxy container — MUST exist before script runs -->
    <div id="galaxy" class="fixed inset-0 -z-10 pointer-events-none"></div>
    <div class="fixed inset-0 -z-10 bg-gradient-to-b from-black via-indigo-900/10 to-black"></div>

    <!-- Your existing header, content, footer -->
    <header class="relative z-20 border-b border-white/10 backdrop-blur-xl bg-black/60 sticky top-0">
      <div class="max-w-6xl mx-auto px-6 py-5 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3 group">
          <div class="w-9 h-9 bg-gradient-to-br from-cyan-400 to-purple-600 rounded-lg blur-sm group-hover:blur-md transition"></div>
          <span class="text-2xl font-bold tracking-wider font-orbitron bg-gradient-to-r from-cyan-300 to-purple-400 bg-clip-text text-transparent">
            COSMICVAULT
          </span>
        </a>
        <nav class="hidden md:flex items-center gap-10 text-sm uppercase tracking-widest">
          <a href="/" class="opacity-70 hover:opacity-100 hover:text-cyan-300 transition">Library</a>
          <a href="/legal" class="opacity-70 hover:opacity-100 hover:text-purple-300 transition">Legal</a>
        </nav>
      </div>
    </header>

    <slot />

    <footer class="relative z-10 border-t border-white/5 py-12 mt-32">
      <div class="max-w-4xl mx-auto text-center text-sm opacity-60">
        <p>Built by Gheorghe Varga • Powered by Grok (xAI) • 2025–∞</p>
        <p class="mt-2">All works are public domain • Source MIT licensed</p>
      </div>
    </footer>

    <!-- Galaxy script — now runs only after DOM is ready -->
    <script>
      // Wait for DOM + a tiny delay so Astro has injected #galaxy
      document.addEventListener('DOMContentLoaded', () => {
        setTimeout(initGalaxy, 100);
      });

      function initGalaxy() {
        const container = document.getElementById('galaxy');
        if (!container) return;

        const canvas = document.createElement('canvas');
        canvas.style.position = 'absolute';
        canvas.style.inset = '0';
        canvas.style.width = '100%';
        canvas.style.height = '100%';
        container.appendChild(canvas);

        const ctx = canvas.getContext('2d');
        let w = canvas.width = window.innerWidth * devicePixelRatio;
        let h = canvas.height = window.innerHeight * devicePixelRatio;
        canvas.style.width = window.innerWidth + 'px';
        canvas.style.height = window.innerHeight + 'px';
        ctx.scale(devicePixelRatio, devicePixelRatio);

        const arms = 5;
        const starsPerArm = 900;
        const rotationSpeed = 0.00007;
        let angle = 0;

        const stars = [];
        for (let a = 0; a < arms; a++) {
          const baseAngle = (a / arms) * Math.PI * 2;
          for (let i = 0; i < starsPerArm; i++) {
            const dist = Math.pow(i / starsPerArm, 1.8);
            const twist = dist * 4.8;
            const x = Math.cos(baseAngle + twist) * dist;
            const y = Math.sin(baseAngle + twist) * dist * 0.35;
            stars.push({
              x, y,
              brightness: 1 - dist * 0.65,
              twinkle: Math.random()
            });
          }
        }

        function draw() {
          ctx.fillStyle = 'rgba(0, 0, 0, 0.06)';
          ctx.fillRect(0, 0, w, h);

          ctx.save();
          ctx.translate(w / 2 / devicePixelRatio, h / 2 / devicePixelRatio);

          // Core
          const grad = ctx.createRadialGradient(0, 0, 0, 0, 0, 80);
          grad.addColorStop(0, 'rgba(255, 240, 180, 1)');
          grad.addColorStop(0.4, 'rgba(255, 180, 100, 0.8)');
          grad.addColorStop(1, 'rgba(140, 80, 255, 0)');
          ctx.fillStyle = grad;
          ctx.fillRect(-80, -80, 160, 160);

          // Arms
          stars.forEach(s => {
            const x = Math.cos(angle + s.twinkle) * s.x * Math.min(w, h) / 2.3;
            const y = Math.sin(angle + s.twinkle) * s.y * Math.min(w, h) / 2.3;
            ctx.globalAlpha = s.brightness * (0.6 + Math.sin(Date.now() * 0.001 + s.twinkle * 10) * 0.3);
            ctx.fillStyle = '#fff';
            ctx.fillRect(x - 1, y - 1, 2, 2);
          });

          ctx.restore();
          angle += rotationSpeed;
          requestAnimationFrame(draw);
        }

        draw();

        window.addEventListener('resize', () => {
          w = canvas.width = window.innerWidth * devicePixelRatio;
          h = canvas.height = window.innerHeight * devicePixelRatio;
          canvas.style.width = window.innerWidth + 'px';
          canvas.style.height = window.innerHeight + 'px';
        });
      }
    </script>
  </body>
</html>
