---
// src/layouts/MainLayout.astro
import '../styles/global.css';
export interface Props { title: string; description?: string; }
const { title = "CosmicVault", description = "Eternal archive of human wisdom" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} • CosmicVault</title>
    <meta name="description" content={description} />

    <link rel="icon" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
  </head>

  <body class="font-sans bg-black text-gray-100 min-h-screen overflow-x-hidden">

    <!-- Rotating Spiral Galaxy Background -->
    <div class="fixed inset-0 -z-10">
      <div id="galaxy" class="w-full h-full"></div>
    </div>

    <!-- Rest of your layout stays exactly the same -->
    <header class="relative z-20 border-b border-white/10 backdrop-blur-xl bg-black/60 sticky top-0">
      <div class="max-w-6xl mx-auto px-6 py-5 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3 group">
          <div class="w-9 h-9 bg-gradient-to-br from-cyan-400 to-purple-600 rounded-lg blur-sm group-hover:blur-md transition"></div>
          <span class="text-2xl font-bold tracking-wider font-orbitron bg-gradient-to-r from-cyan-300 to-purple-400 bg-clip-text text-transparent">
            COSMICVAULT
          </span>
        </a>
        <nav class="hidden md:flex items-center gap-10 text-sm uppercase tracking-widest">
          <a href="/" class="opacity-70 hover:opacity-100 hover:text-cyan-300 transition">Library</a>
          <a href="/legal" class="opacity-70 hover:opacity-100 hover:text-purple-300 transition">Legal</a>
        </nav>
      </div>
    </header>

    <slot />

    <footer class="relative z-10 border-t border-white/5 py-12 mt-32">
      <div class="max-w-4xl mx-auto text-center text-sm opacity-60">
        <p>Built by Gheorghe Varga • Powered by Grok (xAI) • 2025–∞</p>
        <p class="mt-2">All works are public domain • Source MIT licensed</p>
      </div>
    </footer>

    <!-- Spiral Galaxy Animation -->
    <script is:global>
      const canvas = document.createElement('canvas');
      canvas.style.position = 'fixed';
      canvas.style.inset = '0';
      canvas.style.pointerEvents = 'none';
      document.getElementById('galaxy')?.appendChild(canvas);
      const ctx = canvas.getContext('2d');
      let w = canvas.width = window.innerWidth;
      let h = canvas.height = window.innerHeight;

      const arms = 5;
      const starsPerArm = 800;
      const rotationSpeed = 0.00008; // very slow, majestic
      let angle = 0;

      const stars = [];
      for (let arm = 0; arm < arms; arm++) {
        const armAngle = (arm / arms) * Math.PI * 2;
        for (let i = 0; i < starsPerArm; i++) {
          const distance = (i / starsPerArm) ** 1.8;
          const twist = distance * 4.5;
          const x = Math.cos(armAngle + twist) * distance;
          const y = Math.sin(armAngle + twist) * distance * 0.4; // flattened galaxy
          const brightness = 1 - distance * 0.7;
          stars.push({ x, y, brightness, armAngle });
        }
      }

      // Core glow
      const core = { x: 0, y: 0, radius: 0.
